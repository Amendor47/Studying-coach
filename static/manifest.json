{
  "name": "Study Coach - Ultimate Learning Solution",
  "short_name": "StudyCoach",
  "description": "Advanced AI-powered learning platform with spaced repetition, multi-modal content analysis, and intelligent tutoring",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0a0d12",
  "theme_color": "#00e0b8",
  "orientation": "portrait-primary",
  "categories": ["education", "productivity", "learning"],
  "lang": "fr-FR",
  "icons": [
    {
      "src": "logo.svg",
      "sizes": "any",
      "type": "image/svg+xml"
    }
  ],
  "shortcuts": [
    {
      "name": "Révisions rapides",
      "short_name": "Révisions",
      "description": "Commencer une session de révision",
      "url": "/#flash",
      "icons": [{ "src": "logo.svg", "sizes": "any" }]
    },
    {
      "name": "Importer document",
      "short_name": "Import",
      "description": "Analyser un nouveau document",
      "url": "/#import",
      "icons": [{ "src": "logo.svg", "sizes": "any" }]
    },
    {
      "name": "Analytics",
      "short_name": "Progrès",
      "description": "Voir les statistiques d'apprentissage",
      "url": "/#analytics",
      "icons": [{ "src": "logo.svg", "sizes": "any" }]
    }
  ],
  "screenshots": [
    {
      "src": "screenshot-wide.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Advanced flashcard interface with AI tutoring"
    },
    {
      "src": "screenshot-narrow.png",
      "sizes": "640x1136", 
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile-optimized learning experience"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "scope": "/",
  "id": "study-coach-ultimate",
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+studycoach",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/pdf": [".pdf"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".tiff"]
      }
    }
  ]
}